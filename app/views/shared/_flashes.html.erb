<% if notice %>
 <script data-turbo-temporary>
    Swal.fire({
    title: 'Parfait',
    text: '<%= notice.html_safe %>',
    icon: 'success',
    })
 </script>
<% end %>

<% if alert %>
 <script data-turbo-temporary>
    Swal.fire({
    title: 'Attention',
    text: '<%= alert.html_safe %>',
    icon: 'error',
    })
 </script>
<% end %>
